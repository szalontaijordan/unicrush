<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="400.0" prefWidth="600." xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unicrush.controller.GameSceneController">
    <center>
        <GridPane fx:id="mainGrid" alignment="CENTER" gridLinesVisible="false" BorderPane.alignment="CENTER">
            <columnConstraints>
            </columnConstraints>
            <rowConstraints>
            </rowConstraints>
        </GridPane>
    </center>
    <top>
        <AnchorPane prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
            </padding>
            <children>
                <Label layoutX="50.0" layoutY="17.0" text="Score:" />
                <Label fx:id="scoreLabel" layoutX="120.0" layoutY="17.0" text="" />
                <Label layoutX="433.0" layoutY="17.0" text="Remaining steps:" />
                <Label fx:id="levelSteps" layoutX="600.0" layoutY="17.0" />
            </children>
        </AnchorPane>
    </top>
    <bottom>
        <StackPane>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label fx:id="levelMessage" layoutX="260.0" layoutY="17.0" prefHeight="10.0" prefWidth="200.0" />
            </children>
        </StackPane>
    </bottom>
</BorderPane>
